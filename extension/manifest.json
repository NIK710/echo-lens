{
  "manifest_version": 3,
  "name": "Echo Lens",
  "version": "1.0",
  "description": "Analyze Reddit threads for echo chambers",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}

